<view class="page">
  <view class='bule-background navblock'>
    <view wx:for="{{tabs}}" class='tab {{activeIndex==index?"tabon":""}}' data-id='{{index}}' bindtap='tabClick'>{{item}}</view>
  </view>
  <view hidden="{{activeIndex != 0}}">
    <view class='container'>
      <view class='white-block' wx:for="{{zqthingList}}" wx:key="id">
        <navigator url='../more/more?id={{item.id}}' class='navigete'>
          <view class='mes'>
            <view class='img'>
              <image src='{{item.imgSrc1}}' mode='aspectFit'></image>
            </view>
            <view class='title'>{{item.title}}</view>
            <view class='centent'>{{item.subContent}}</view>
            <view class='timeAndPlace'>
              <view class='timeAndPlace-img'>
                <image src='../../image/time.png'></image>
              </view>
              <text decode="{{true}}"> &nbsp;{{item.time}} &nbsp;&nbsp;&nbsp;</text>
              <view class='timeAndPlace-img'>
                <image src='../../image/place.png'></image>
              </view>
              <text decode="{{true}}" class='oneline'> &nbsp;{{item.place}} </text>
            </view>
          </view>
          <view class='send'>></view>
        </navigator>
      </view>
      <view class='push' wx:if="{{zqpush}}">上拉加载更多</view>
      <view class='push' wx:else>已无更多信息</view>
    </view>
  </view>
  <view hidden="{{activeIndex != 1}}">
    <view class='container'>
      <view class='white-block' wx:for="{{gzthingList}}" wx:key="id">
        <navigator url='../more/more?id={{item.id}}' class='navigete'>
          <view class='mes'>
            <view class='img'>
              <image src='{{item.imgSrc1}}' mode='aspectFit'></image>
            </view>
            <view class='title'>{{item.title}}</view>
            <view class='centent'>{{item.subContent}}</view>
            <view class='timeAndPlace'>
              <view class='timeAndPlace-img'>
                <image src='../../image/time.png'></image>
              </view>
              <text decode="{{true}}"> &nbsp;{{item.time}} &nbsp;&nbsp;&nbsp;</text>
              <view class='timeAndPlace-img'>
                <image src='../../image/place.png'></image>
              </view>
              <text decode="{{true}}" class='oneline'> &nbsp;{{item.place}} </text>
            </view>
          </view>
          <view class='send'>></view>
        </navigator>
      </view>
      <view class='push' wx:if="{{gzpush}}">上拉加载更多</view>
      <view class='push' wx:else>已无更多信息</view>
    </view>
  </view>
  <view class='float-button' bindtap='post'>
    <image class='float-button' src='../../image/float-post.png'></image>
  </view>             
</view>




  
