.search-form input{
  padding-left:25rpx;
}
  
.wxSearch{
  width: 100%;
  height: 100%;
  border-top: 1px #eee solid;
  background-color: rgba(200, 200, 200, 0.1);
  z-index: 9999;
}

.wxSearchInner{
  background-color: #fff;
}

.wxSearchMindKeyItem{
  padding: 10px 5px 10px 15px;
  margin-left: 10px;
  border-bottom: 1px solid #eee;
  display: flex;
  font-size: 13px;
}

/** 标签样式 */
.wxSearchKeyList{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
}

/** 标签样式 */
.wxSearchKeyItem{
  width: 21.5%;
  font-size: 26rpx;
  text-align: center;
  border: 2rpx solid #eee;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 0px;
  background-color: rgba(200, 200, 200, 0.1);
}

.searchScopeItem{
  padding-left:10px;
  padding-top:10px;
  padding-right:5px;
  padding-bottom:5px;
  display:flex;
  font-size: 13px;
}

.searchScope{
  display:block;
  border-bottom:1px solid #eee;
}

.searchScopePicker{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  padding-left:10px;
  padding-right:5px;
  padding-bottom:10px;
}

.scopePicBlock{
  flex:0 0 18%;
  font-size:26rpx;
  text-align:center;
  border:1px solid #eee;
  padding:10rpx;
  border-radius:0px;
  background-color:rgba(200, 200, 200, 0.1);
}

.red-font{
  color:red;
}



